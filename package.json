{
  "name": "next-electron",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"tsc -p tsconfig.electron.json --watch\" \"cross-env NODE_ENV=development electron dist/main.js\"",
    "build": "tsc --project tsconfig.electron.json && next build && electron-builder",
    "start": "next start & electron dist/main.js",
    "electron": "electron dist/main.js",
    "build:win": "pnpm build && pnpm electron-builder --win",
    "build:mac": "pnpm build && pnpm electron-builder --mac",
    "build:linux": "pnpm build && pnpm electron-builder --linux",
    "build:all": "pnpm build && pnpm electron-builder --win --mac --linux"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.1.20",
    "@ai-sdk/openai": "^1.2.1",
    "@ai-sdk/react": "^1.1.21",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "ai": "^4.1.54",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.477.0",
    "next": "14.2.24",
    "next-themes": "^0.4.4",
    "react": "^18",
    "react-dom": "^18",
    "react-markdown": "^10.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "wait-on": "^8.0.2",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/wait-on": "^5.3.4",
    "concurrently": "^9.1.2",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
